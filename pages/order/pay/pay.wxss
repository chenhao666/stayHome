.container{
  padding: 40rpx;
  padding-top: 0rpx;
}
.title{
  width: 100%;
  margin-top: 10rpx;
  font-size:64rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(25,25,25,1);
}
.payInfo{
  position: relative;
  margin-top: 30rpx;
  width: 100%;
  height: 440rpx;
  padding: 40rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow:0px 5rpx 27rpx 0px rgba(84,96,95,0.24);
}

.payInfo .price{
  width: 100%;
  text-align: center;
  font-size:60rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(25,25,25,1);
}
.payInfo .price text{
  font-size: 36rpx;
}
.payInfo .number{
  width: 100%;
  text-align: center;
  margin-top: 28rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(107,107,107,1);
}
.payInfo image{
  position: absolute;
  display: block;
  width:437rpx;
  height:190rpx;
  margin-top: 25rpx;
  top: 166rpx;
  left: 2rpx;
}
.circle{
  background: #ffffff;
  width: 100%;
  height: 80rpx;
  position: relative;
  overflow: hidden;
}
.circle .left{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  top: 0rpx;
  left: -40rpx;
  background: #ffffff;
  box-shadow:0px 5rpx 27rpx 0px rgba(84,96,95,0.24) inset;
}
.circle .right{
  background: #ffffff;
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  top: 0rpx;
  right: -40rpx;
  box-shadow:0px 5rpx 27rpx 0px rgba(84,96,95,0.24) inset;
}
.circle_line{
  width: 100%;
  height:0rpx;
  border-top:2rpx dashed rgba(234,240,240,1);
  margin-top: 40rpx;
}
.selectPay{
  width: 100%;
  padding: 40rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow:0px 5rpx 27rpx 0px rgba(84,96,95,0.24);
}
.select_title{
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(107,107,107,1);
}
.selectList .item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  border-bottom:2rpx solid rgba(234,240,240,1);
}
.selectList .item text{
  display: block;
  height: 100rpx;
  width: 100%;
  font-size:26rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(25,25,25,1);
  padding-left: 68rpx;
  box-sizing: border-box;
}
.selectList .ico{
  position: absolute;
  width:50rpx;
  height:50rpx;
  top: 28rpx;
  left: 0rpx;    
}
.selectList .checkIco{
  position: absolute;
  right: 0rpx;
  width:36rpx;
  height:36rpx;
  top: 32rpx;
}
.btn{
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow:0px 5rpx 27rpx 0px rgba(84,96,95,0.24);
}
.btn button{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(25,25,25,1);
  border-radius:6rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,254,254,1);
}