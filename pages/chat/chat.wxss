/* pages/chat/chat.wxss */
page{
  background: #ffffff;
  box-sizing: border-box;
  padding: 40rpx;
  padding-top: 0rpx;
}
.title{
  width: 100%;
  font-size:64rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(25,25,25,1);
  margin-top: 10rpx;
}
.msgRead{
  width: 100%;
  font-size:26rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(25,25,25,1);
  margin-top: 30rpx;
}
.chatList{
  width: 100%;
  background: #ffffff;
}
.chatList .item{
    height: 160rpx;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
    box-shadow:0px 5rpx 27rpx 0px rgba(84,96,95,0.24);
    border-radius:10rpx;
    position: relative;
}
.box{
  float: left;
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  left: 30rpx;
  top: 35rpx;
}
.chatList .item image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 8rpx;
}
.num{
  display: block;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -10rpx;
  right: -10rpx;
  background: #F2CD0B;
  color:#ffffff;
  font-size: 22rpx;
  border-radius: 50%;
  line-height: 30rpx;
  text-align: center;
}
.info{
  float: left;
  width:500rpx;
  margin-left: 20rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
}
.chat_user{
  width: 100%;
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(25,25,25,1);
}
.content{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(107,107,107,1);
  margin-top: 20rpx;
  text-overflow: ellipsis;
}
.time{
  float: right;
  font-size: 20rpx;
  color: #8E8E8E;
}
.empty{
  width: 100%;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
  font-size: 26rpx;
  color: #787878;
  margin-top: 40rpx;
}